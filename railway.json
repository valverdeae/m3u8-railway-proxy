{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install --omit=dev"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE"
  },
  "crons": [
    {
      "command": "cd /app && node update.js",
      "schedule": "*/1 * * * *",
      "timeout": 45
    }
  ]
}
