{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE"
  },
  "crons": [
    {
      "command": "node update.js",
      "schedule": "*/1 * * * *",
      "timeout": 30
    }
  ]
}
